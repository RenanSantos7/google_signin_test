{
	"extends": "expo/tsconfig.base",
	"compilerOptions": {
		//Modules
		"module": "ES2015",
		"allowImportingTsExtensions": true,

		// Interop Constraints
		"isolatedModules": true,
		"forceConsistentCasingInFileNames": true,

		// Type Check
		"strict": true,
		"noUnusedLocals": false,
		"noUnusedParameters": false,
		"noFallthroughCasesInSwitch": true,
		"skipLibCheck": true
	},
}

